// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "base_keymap": "VSCode",
  "buffer_font_family": "Monaspace Neon Var",
  "buffer_font_features": {
    "calt": true,
    "dlig": true,
    "liga": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "ss09": true
  },
  "buffer_font_size": 14,
  "buffer_font_weight": 500,
  "copilot": {
    "disabled_globs": [
      ".env",
      "application.yml"
    ]
  },
  "cursor_blink": false,
  "detect_venv": "off",
  "ensure_final_newline_on_save": true,
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic",
        "font_weight": 400
      }
    }
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "indent_guides": {
    "enabled": false
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "Git Commit": {
      "preferred_line_length": 72,
      "soft_wrap": "preferred_line_length"
    },
    "Markdown": {
      "remove_trailing_whitespace_on_save": false
    },
    "Plain Text": {
      "soft_wrap": "none"
    },
    "Ruby": {
      "formatter": {
        "external": {
          "arguments": [
            "--autocorrect",
            "--stderr",
            "--stdin",
            "{buffer_path}"
          ],
          "command": "rubocop"
        }
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "codeAction": true,
          "completion": true,
          "definition": true,
          "diagnostic": true,
          "diagnostics": false,
          "documentHighlights": true,
          "documentSymbols": true,
          "formatting": true,
          "hover": true,
          "inlayHints": true,
          "signatureHelp": true,
          "workspaceSymbols": true
        }
      }
    }
  },
  "remove_trailing_whitespace_on_save": true,
  "tab_size": 2,
  "tabs": {
    "git_status": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "blinking": "off"
  },
  "ui_font_size": 15,
  "use_autoclose": false,
  "vim_mode": true
}
